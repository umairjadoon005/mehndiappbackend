<!DOCTYPE html>
<html>
<head>
  <title>Design</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .design-img {
      width: 200px;
      height: 200px;
      object-fit: cover;       /* Crop to fill */
      object-position: center; /* Always center the crop */
      display: block;
      margin: 0 auto;
      border-radius: 10px;     /* Optional: rounded corners */
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
    .design-item {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  </style>
</head>
<body class="bg-light">

  <div class="container text-center my-4">
    <h1 class="mb-4">Design</h1>
    <div class="row g-4 justify-content-center">
      <% design.forEach(design => { %>
        <div class="col-md-3 col-sm-6 design-item">
          <img src="/uploads/<%= design.filename %>" alt="Design" class="design-img">
        </div>
      <% }) %>
    </div>
    <p class="mt-4">
      <a href="/design/new" class="btn btn-primary">Add New Design</a>
    </p>
  </div>

</body>
</html>
